pipeline {
     agent any
        stages {
            stage('Build') {
                   steps {
                    echo 'Build'
                   
                 }
                }
                 stage('Test') {
                    steps {
                      echo 'Test'
                       
                 }
                }
                 stage('sonar-qube') {
                    steps {
                       echo 'sonar-qube'
                    }
                 }
                 stage('Deploy Dev') {
                    steps {
                        echo 'Deploy Dev'
                    }
                 }
 
                 stage('Deploy QA') {
                    steps {
                 echo 'Deploy QA'
                    }
                 }
 
                 stage('Deploy Stage') {
                    steps {
                 echo 'Deploy stage'
                    }
                 }
 
                 stage('Deploy prod') {
                    steps {
                 echo 'Deploy prod'
                    }
                }
               }
    post {
        always {
            echo 'Always'
        }
   
    failure {
            echo 'failed'
        }
   
    aborted {
            echo 'aborted'
        }
    }    
 
        }
     
 

 
 
 
 
 
 
 
 

 
 
 
 
 
 
